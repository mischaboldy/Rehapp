<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer een doel"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="75dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/blueTop"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Aangeraden doelen op basis van uw gegevens:"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/blueTop"
        android:layout_gravity="center_horizontal"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="65dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/goal_1_button"
            android:button="@null"
            android:background="@drawable/goal_1"
            android:layout_gravity="center_vertical"
            android:onClick="goalRadioButtonClicked"/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/goal_2_button"
            android:button="@null"
            android:background="@drawable/goal_2"
            android:layout_gravity="center_vertical"
            android:onClick="goalRadioButtonClicked"/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:id="@+id/goal_3_button"
            android:button="@null"
            android:background="@drawable/goal_3"
            android:layout_gravity="center_vertical"
            android:onClick="goalRadioButtonClicked"/>
    </RadioGroup>


    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/blueTop"
        android:text="Doel opslaan"
        android:id="@+id/save_goal_button"
        android:onClick="saveGoal"
        android:textColor="#fff" />
</LinearLayout>