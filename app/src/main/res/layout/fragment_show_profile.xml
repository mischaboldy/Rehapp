<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ListView
            android:id="@+id/profile_info_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/blueTop">
        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:onClick="updateProfile"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invoeren trainingsgegevens"
            android:onClick="input_training_info"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="invoeren testgegevens"
            android:onClick="input_test_info"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voortgang tonen"
            android:onClick="showProgress"/>
    </LinearLayout>

</LinearLayout>