<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mischaboldy.mischa.rehapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyTraining"
            android:label="@string/title_activity_my_training"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mischaboldy.mischa.rehapp.MainMenu" />
        </activity>
        <activity
            android:name=".InputWorkout"
            android:label="@string/title_input_workout"
            android:parentActivityName=".MyTraining"
            android:theme="@style/AppTheme"
            android:noHistory="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mischaboldy.mischa.rehapp.MyTraining" />
        </activity>
        <activity
            android:name=".MyProfile"
            android:label="@string/title_input_workout"
            android:parentActivityName=".MainMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mischaboldy.mischa.rehapp.MainMenu" />
        </activity>
    </application>

</manifest>